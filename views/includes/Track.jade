append .row-fluid
  div(class="row-fluid")
    .span9
      dl.dl-horizontal
        dt track
        dd 
          a(href=result.url, target="_blank") #{result.name}
        dt album
        dd 
          a(href=result.album.url, target="_blank") #{result.album.name}
        if result.length
          dt length
          dd #{result.length}
        if result.album.availability
          dt Territories
            dd #{result.album.availability}
    if result.album.image
      .span2
        img(src=result.album.image, width=100, height=100)