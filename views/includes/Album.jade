append .row-fluid
  div(class="row-fluid")
    .span9
      dl.dl-horizontal
        dt album
        dd 
          a(href=result.url, target="_blank") #{result.name}
        if result.availability
          dt Territories
          dd 
            each territory in result.availability
              a(href="?limit-territory=#{territory}", title="Limit results to #{territory}") #{territory}
              | 
    if result.image
      .span2
        img(src=result.image, width=100, height=100)